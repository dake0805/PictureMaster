<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/choose_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="340dp"
        android:onClick="selectPhoto"
        android:text="choose"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:onClick="cameraShotPhoto"
        android:text="CAMERA"
        app:layout_constraintBaseline_toBaselineOf="@+id/choose_button"
        app:layout_constraintEnd_toStartOf="@+id/choose_button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Joint"
        app:layout_constraintBaseline_toBaselineOf="@+id/camera_button"
        app:layout_constraintEnd_toStartOf="@+id/camera_button" />

    <ImageView
        android:id="@+id/background"
        android:layout_width="408dp"
        android:layout_height="727dp"
        android:fadingEdge="vertical"
        android:foregroundGravity="fill_vertical"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@android:color/background_dark"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>