<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/choose_button"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="221dp"
        android:background="@drawable/ic_local"
        android:onClick="selectPhoto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/camera_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/ic_camera"
        android:onClick="cameraShotPhoto"
        app:layout_constraintBaseline_toBaselineOf="@+id/choose_button"
        app:layout_constraintEnd_toStartOf="@+id/choose_button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginEnd="29dp"
        android:background="@drawable/ic_join"
        app:layout_constraintBaseline_toBaselineOf="@+id/camera_button"
        app:layout_constraintEnd_toStartOf="@+id/camera_button" />

    <ImageView
        android:id="@+id/background"

        android:fadingEdge="vertical"
        android:foregroundGravity="fill_vertical"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"


        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"


        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@android:color/background_dark"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="99dp"
        android:layout_height="87dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="176dp"
        android:layout_height="139dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_paim" />


</androidx.constraintlayout.widget.ConstraintLayout>